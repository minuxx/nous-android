<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:padding="16dp">

  <View
    android:id="@+id/l_line_view"
    android:layout_width="12dp"
    android:layout_height="1dp"
    android:layout_marginEnd="12dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@id/page_tv"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/page_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:text="@{Integer.toString(pageNumber)}"
    android:textAppearance="?attr/textAppearanceListItem"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="1" />

  <View
    android:id="@+id/r_line_view"
    android:layout_width="12dp"
    android:layout_height="1dp"
    android:layout_marginStart="12dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toEndOf="@id/page_tv"
    app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
